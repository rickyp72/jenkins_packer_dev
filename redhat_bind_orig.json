{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-central-1",
    "source_ami": "ami-e4c63e8b",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "pkr-redhat-bind{{timestamp}}"
  }],
  "provisioners": [{
  "type": "shell",
  "inline": [
    "sleep 30",
    "sudo yum -y update",
    "sudo yum install -y bind",
    "sudo yum install -y ntp",
    "sudo apt-get install -y ruby",
    "sudo gem install serverspec",
    "cd /tmp/tests",
    "rake spec TARGET_HOST=localhost"
  ]
}]
}
